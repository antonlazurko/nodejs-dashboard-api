generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model UserModel {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  password String
}

model ProductModel {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String?
  description String?
  brand       String?
  color       String?
  price       Int
  size        Int?
  quantity    Int
  isNewState  Boolean
}
